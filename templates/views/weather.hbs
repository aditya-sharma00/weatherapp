<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Latest compiled and minified CSS -->
    {{>links}}
    
</head>

<body>
    {{>header}}

    <!-- main header -->
    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                <div class="main_content">
                    <form action="" class="temp_form">
                        <input type="text" id="cityName" placeholder="Enter your city name" autocomplete="off" >
                        <input type="submit" id="submitBtn">
                    </form>
                </div>

                <div class="tempInformation">
                    <div class="top_layer">
                        <p id="day" >Monday</p>
                        <p id="today_date" >6 Dec</p>
                    </div>
                    <div  class="main_layer" >
                        <p id="city_name" >Get output here</p>
                        <div class="middle_layer data_hide tempFontSize" >
                            <p id="temp"> <span>0</span><sup>o</sup>C</p>
                            <p id="temp_status"><i class="fa fa-cloud" aria-hidden="true"></i></p>
                        </div>

                    </div>
                </div>


            </div>
        </div>
    </div>

    <!--Footer Code-->
    {{>footer}}

    <script src="js/main.js" ></script>

</body>

</html>